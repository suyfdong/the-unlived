# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Google Analytics (可选)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX  # 替换成你的Google Analytics测量ID

# 防护配置 (可选，有默认值)
# ⚠️ 双层限流策略：小时限制 + 每日总量限制

# AI生成限流
MAX_REQUESTS_PER_HOUR=10      # 每小时最多10次（防止短时间爆刷）
MAX_REQUESTS_PER_DAY=20        # 每天最多20次（防止全天薅羊毛）

# 展览提交限流
MAX_SUBMIT_PER_HOUR=20         # 每小时最多20次
MAX_SUBMIT_PER_DAY=30          # 每天最多30次

# 其他限制
MAX_TEXT_LENGTH=2000           # 用户输入最大字符数
